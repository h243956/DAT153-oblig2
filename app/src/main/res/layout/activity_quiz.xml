<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.QuizActivity">

    <TextView
        android:id="@+id/progressTextView"
        android:layout_width="274dp"
        android:layout_height="42dp"
        android:layout_marginTop="64dp"
        android:gravity="center"
        android:text="On 1/5"
        android:textSize="30sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="274dp"
        android:layout_height="188dp"
        android:layout_marginTop="164dp"
        android:gravity="center"
        android:text="On 1/5"
        android:textSize="30sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/nextQuizItemButton"
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:text="Next"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answerNameInputText"
        app:layout_constraintVertical_bias="0.226" />

    <Button
        android:id="@+id/finishQuizButton"
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:text="Finish"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answerNameInputText"
        app:layout_constraintVertical_bias="0.226" />

    <ImageView
        android:id="@+id/quizItemImageView"
        android:layout_width="270dp"
        android:layout_height="204dp"
        android:layout_marginTop="148dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/answerNameInputText"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_marginTop="36dp"
        android:hint="guess the name"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:textSize="14sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/quizItemImageView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/quizItemImageView"
        app:layout_constraintTop_toBottomOf="@+id/quizItemImageView" />


</androidx.constraintlayout.widget.ConstraintLayout>